rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ====================================================================
    // USERS COLLECTION (UPDATED & FIXED)
    // ====================================================================
    match /users/{userId} {
      // AI ĐƯỢC ĐỌC MỘT DOCUMENT? (GET)
      // Bất kỳ user nào cũng có thể đọc profile của chính mình.
      allow get: if request.auth != null && request.auth.uid == userId;

      // AI ĐƯỢC ĐỌC CẢ DANH SÁCH? (LIST) <-- THIS IS THE FIX
      // Chỉ admin mới có quyền đọc toàn bộ danh sách users.
      allow list: if request.auth != null &&
                     'admin' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;

      // AI ĐƯỢC GHI? <-- SUGGESTED CHANGE FOR DASHBOARD FUNCTIONALITY
      // Chỉ admin mới có quyền sửa thông tin user (ví dụ: đổi role).
      // Vẫn rất an toàn vì user thường không thể tự sửa.
      allow write: if request.auth != null &&
                      'admin' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // ====================================================================
    // ANNOUNCEMENTS COLLECTION (Your rule is already perfect)
    // ====================================================================
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth != null &&
                      'admin' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // All your other rules are great, let's keep them!

    // ====================================================================
    // FEEDBACKS COLLECTION
    // ====================================================================
    match /feedbacks/{feedbackId} {
      allow read: if false;
      allow create: if request.auth != null &&
                       request.resource.data.name is string &&
                       request.resource.data.name.size() < 100 &&
                       request.resource.data.message is string &&
                       request.resource.data.message.size() < 1000 &&
                       request.resource.data.rating is number &&
                       request.resource.data.rating >= 1 &&
                       request.resource.data.rating <= 5;
      allow update, delete: if false;
    }

    // ====================================================================
    // SECURITY TOKENS COLLECTION
    // ====================================================================
    match /security_tokens/{docId} {
      allow read, write: if false;
    }
  }
}